<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--ImageView, EditText, Button, RandomButton-->
    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/main_imageView"
        android:layout_width="270dp"
        android:layout_height="287dp"
        android:layout_marginTop="@dimen/MarginTop_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_imageView" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/marginTop_btn"
        android:text="@string/submit"
        app:layout_constraintEnd_toStartOf="@+id/main_editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_editText" />

    <Button
        android:id="@+id/random_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/marginTop_btn"
        android:text="@string/random"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_editText"
        app:layout_constraintTop_toBottomOf="@+id/main_editText" />


</androidx.constraintlayout.widget.ConstraintLayout>